<div class="text-center">
  <!-- <h1 class="home-title" style="font-size: 80px;">Home Alone</h1> -->
  <%= image_tag("logo.png", height: '180', width: '750') %>

  <br><br>

  <%= form_tag({:action=>"show", :controller => "page"}, method: "get") do %>
    <div class="row form-group">
      <div class="col-12">
        <%= text_field_tag :endereco, params[:endereco], :class => 'form-control', :placeholder => "Insira o endereço" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-8">
        <%= select_tag :tipo, options_for_select([
          ['Academias', "gym"],
          ['Bares', "bar"],
          ['Bancos', "bank"],
          ['Farmácias', "pharmacy"],
          ['Hospitais', "hospital"],
          ['Igrejas', "church"],
          ['Lavanderias', "laundry"],
          ['Restaurantes', "restaurant"]
          ]), :class => 'form-control', :prompt => "Escolha uma preferência" %>
      </div>
      <div class="col-4">
        <%= number_field_tag :distancia, params[:distancia], :class => 'form-control', :placeholder => "Raio de busca (m)" %>
      </div>
    </div>

    <%= submit_tag "Buscar", :id => "find-on-map", :class => "btn btn-primary btn-lg", :style => "width: 300px;" %>
  <% end %>

  <br>

  <%= link_to 'Ver todos', list_path, :class => "btn btn-primary btn-lg", :style => "width: 300px;" %>

</div>
