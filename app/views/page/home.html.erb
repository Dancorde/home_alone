<div class="text-center">
  <h1 class="home-title" style="font-size: 80px;">Home Alone</h1>

  <%= form_tag({:controller => "places"}, {:class => ""}) do %>
    <div class="row form-group">
      <div class="col-12">
        <%= text_field_tag :endereco, params[:endereco], :class => 'form-control', :placeholder => "Insira o endereço" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-8">
        <%= text_field_tag :endereco, params[:endereco], :class => 'form-control', :placeholder => "Escolha uma preferência" %>
